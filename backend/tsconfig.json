{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@domain/*": [ "./src/domain/*" ],
      "@infra/*": [ "./src/infra/*" ],
      "@test/*": [ "./test/*" ]
    }
  },
  "exclude": [
    "./src/**/*.spec.ts",
    "./src/**/*.e2e-spec.ts",
    "./jest.config.ts",
    "./swagger.json",
    "./node_modules",
    "./test",
    "./prisma/prismaTestEnvironment.ts"
  ]
}
