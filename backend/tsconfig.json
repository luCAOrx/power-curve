{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@domain/*": [ "./src/domain/*" ],
      "@infra/*": [ "./src/infra/*" ],
      "@test/*": [ "./test/*" ]
    }
  }
}
